<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HomeAnime">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="200dp"
        android:layout_height="400dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/anime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/btnComprimento"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:contentDescription="btnComprimento"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/comprimento" />



    <ImageButton
        android:id="@+id/btnTemperatura"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:contentDescription="btnTemperatura"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnComprimento"
        app:srcCompat="@drawable/temperatura" />

    <ImageButton
        android:id="@+id/btnPeso"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:contentDescription="btnPeso"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/btnTemperatura"
        app:layout_constraintTop_toBottomOf="@+id/btnTemperatura"
        app:srcCompat="@drawable/peso" />

    <ImageButton
        android:id="@+id/btnDados"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:contentDescription="btnDados"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/btnPeso"
        app:layout_constraintTop_toBottomOf="@+id/btnPeso"
        app:srcCompat="@drawable/dados"
        />
</androidx.constraintlayout.widget.ConstraintLayout>